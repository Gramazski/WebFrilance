<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>Controller</servlet-name>
        <servlet-class>controller.Controller</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>MainPageServlet</servlet-name>
        <servlet-class>servlets.MainPageServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>servlets.UserServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>JobServlet</servlet-name>
        <servlet-class>servlets.JobServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ProjectServlet</servlet-name>
        <servlet-class>servlets.ProjectServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ForumServlet</servlet-name>
        <servlet-class>servlets.ForumServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>PictServlet</servlet-name>
        <servlet-class>servlets.PictEditServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>PersonalUserServlet</servlet-name>
        <servlet-class>servlets.PersonalUserServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>CustomServlett</servlet-name>
        <servlet-class>servlets.CustomServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>/controller</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>MainPageServlet</servlet-name>
        <url-pattern>/main</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/usercontrol</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>JobServlet</servlet-name>
        <url-pattern>/jobcontrol</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ProjectServlet</servlet-name>
        <url-pattern>/projectcontrol</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ForumServlet</servlet-name>
        <url-pattern>/forumcontrol</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>PictServlet</servlet-name>
        <url-pattern>/pictediting</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>PersonalUserServlet</servlet-name>
        <url-pattern>/personaluser</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>CustomServlett</servlet-name>
        <url-pattern>/custom</url-pattern>
    </servlet-mapping>

</web-app>